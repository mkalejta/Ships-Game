<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        form label {
            font-weight: bold;
        }

        form input {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container text-center mx-auto">
        <h2>Join Game</h2>
    
        <form id="joinGameForm">
            <label for="nameInput">Name: </label>
            <input type="text" id="nameInput" name="joiner" required>
            <button class="btn btn-primary" style="font-weight: bold; font-size: 1rem;" type="submit">Join Game</button>
        </form>
    </div>
    <script src="/js/API.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/actions.js"></script>
    <script>
        document.getElementById('joinGameForm').addEventListener('submit', async function (event) {
            event.preventDefault(); // Zatrzymaj domyślną akcję formularza
    
            const joiner = document.getElementById('nameInput').value;
            const fullUrl = window.location.href;
            const urlParts = fullUrl.split('/');
            const gameIndex = urlParts.indexOf('game');
            let Id = gameIndex !== -1 && urlParts[gameIndex + 1] ? urlParts[gameIndex + 1] : null;
    
            if (!joiner || !Id) {
                alert('Please provide your name and ensure the game ID is valid.');
                return;
            }
    
            try {

                const response = await fetch(`/api/game/${Id}/join?joiner=${joiner}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                });

                if (response.redirected) {
                    window.location.href = response.url;
                } else if (response.ok) {
                    const data = await response.json();
                    alert(data.message || 'Successfully joined the game!');
                } else {
                    const errorData = await response.json();
                    alert(errorData.error || 'An error occurred.');
                }
            } catch (error) {
                console.error('Error while joining the game:', error);
                alert('An unexpected error occurred.');
            }
        });
    </script>
</body>
</html>