<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ranking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .container {
            margin-top: 3rem;
        }
        table {
            width: 50%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #f4f4f4;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        th {
            font-size: 1.3rem;
            background-color: #157347;
            color: white;
            font-style: italic;
        }
        td {
            font-size: 1.1rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 style="text-align: center;">Ranking</h1>
        <table>
            <thead>
                <tr>
                    <th>Player</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% ranking.forEach(item => { %>
                    <% Object.entries(item).forEach(([player, score]) => { %>
                        <tr>
                            <td><%= player %></td>
                            <td><%= score %></td>
                        </tr>
                    <% }) %>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
        let ranking = "<%- ranking %>";

        const fetchData = async () => {
            try {
                const response = await fetch("/api/rankingData");
                const data = await response.json();
                ranking = sortRanking(data);
            } catch (error) {
                console.error("Błąd pobierania danych:", error);
            }
        };

        const sortRanking = (array) => array.sort((a, b) => {
            const [keyA, valueA] = Object.entries(a)[0];
            const [keyB, valueB] = Object.entries(b)[0];

            if (valueA !== valueB) {
                return valueB - valueA;
            }

            return keyA.localeCompare(keyB);
        });

        setInterval(fetchData, 5000);

        // Pierwsze pobranie danych
        fetchData();
    </script>
</body>
</html>