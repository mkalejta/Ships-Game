# JWT secret used for signing authentication tokens
ACCESS_TOKEN_SECRET=your_secret_key_here

# MQTT broker URL (default: mqtt://test.mosquitto.org for local dev, mqtt://mqtt:1883 for Docker)
MQTT_BROKER_URL=mqtt://test.mosquitto.org

# Application port (default: 3000)
PORT=3000

# API host for LAN play (optional)
# Set to your machine's local IPv4 address to allow other devices on the same network to connect.
# Leave empty or commented out for single-device / localhost usage.
# Example: API_HOST=192.168.0.130
API_HOST=
